{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "__test__"],
  "exclude": [
    "./src/test",
    "**/*/__test__/*",
    "**/*/__test__/",
    "*.spec.ts",
    "**/*/md.ts",
    "**/*/*.md"
  ]
}
